.default-modal
  form.form.form--horizontal(ng-submit="savePriceMaster(priceMasterDetail)")
    .default-modal-heading
      h5.modal-title Edit Harga Master Barang
      a.modal-close(ng-click="$dismiss()")
        .icon.icon--large.fa.fa-times
    .default-modal-content
      .form-input-group.pd-bottom-15
        .textfield.textfield--primary
          label.textfield-label.col-md-4.col-sm-4.col-xs-4 Nama Barang
          input(type="text", placeholder="Nama Barang" ng-model="priceMasterDetail.name" readonly)
        .textfield.textfield--primary
          label.textfield-label.col-md-4.col-sm-4.col-xs-4 Cash Pabrik
          input(type="text", placeholder="Cash Pabrik" ng-model="priceMasterDetail.price.cash_pabrik", currency-input)
        .textfield.textfield--primary
          label.textfield-label.col-md-4.col-sm-4.col-xs-4 Cash Gudang
          input(type="text", name="id", placeholder="Cash Gudang" ng-model="priceMasterDetail.price.cash_gudang", currency-input)
        .textfield.textfield--primary
          label.textfield-label.col-md-4.col-sm-4.col-xs-4 Kredit Pabrik
          input(type="text", name="id", placeholder="Kredit Pabrik" ng-model="priceMasterDetail.price.kredit_pabrik", currency-input)
        .textfield.textfield--primary
          label.textfield-label.col-md-4.col-sm-4.col-xs-4 Kredit Gudang
          input(type="text", name="id", placeholder="Kredit Gudang" ng-model="priceMasterDetail.price.kredit_gudang", currency-input)
    .default-modal-footer
      .flex-row.flex-end
        button.button.button--base.button--success
          i.icon.icon--regular.fa.fa-floppy-o
          | Simpan
