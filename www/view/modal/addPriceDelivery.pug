.default-modal
   .default-modal-heading
      h5.modal-title Daftar Harga Pengiriman
   .default-modal-content
      .row.pd-bottom-15
         form.form
            .form-input-group
               label(role="form-label") Cari Berdasarkan
               .row
                  .col-md-4.pd-right-15
                     ui-select(ng-model="selectedFilter.item")
                        ui-select-match
                           span(ng-bind="$select.selected.name")
                        ui-select-choices(repeat="filter in (searchFilters | filter: $select.search) track by $index")
                           span(ng-bind="filter.name")
                  .col-md-4
                     .textfield.textfield--primary(style="margin-right: 15px")
                        .textfield-input
                           input(type="text", ng-model="searchVal", placeholder="{{selectedFilter.item.placeholder}}", ng-show="selectedFilter.item.by === 'name'")
                  .col-md-4
                     .flex-row
                        button.button.button--secondary.button--base(ng-click="doSearchFilter(searchVal, selectedFilter.item.by)") Cari               
      .table
         .table-wrapper(drag-scroll="")
            table.table--selectable
               thead
                  tr
                     th(ng-repeat="heading in detailHeadings", ng-class="{ 'large': heading.size == 'lg' }") {{heading.name}}
               tbody
                  tr(ng-repeat="priceDelivery in priceDeliveryList" ng-click="selectDelivery(priceDeliveryList[$index])")
                     td {{ priceDelivery.name }}
                     td {{ priceDelivery.vehicle }}
                     td {{ numberWithCommas(priceDelivery.capacity) }}
                     td {{ numberWithCommas(priceDelivery.price) }}
                     
      .page-block(style="text-align: center")
         pagination(total-rows="totalRows", data="requiredData")
                     
