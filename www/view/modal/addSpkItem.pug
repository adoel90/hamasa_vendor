.default-modal
   .default-modal-heading
      h5.modal-title Daftar Barang spk
   .default-modal-content
      .row.pd-bottom-15
         form.form
            .form-input-group
               label(role="form-label") Cari Berdasarkan
               .row
                  .col-md-4.pd-right-15
                     ui-select(ng-model="selectedFilter.item")
                        ui-select-match
                           span(ng-bind="$select.selected.name")
                        ui-select-choices(repeat="filter in (searchFilters | filter: $select.search) track by $index")
                           span(ng-bind="filter.name")
                  .col-md-4
                     .textfield.textfield--primary(style="margin-right: 15px")
                        .textfield-input
                           input(type="text", ng-model="item.name", placeholder="{{selectedFilter.item.placeholder}}", ng-show="selectedFilter.item.by === 'name'")
                           input(type="text", ng-model="item.category", placeholder="{{selectedFilter.item.placeholder}}", ng-show="selectedFilter.item.by === 'category'")
                  .col-md-4
                     .flex-row
                        button.button.button--secondary.button--base(ng-click="doSearchFilter(selectedFilter.item.by)") Cari
      .table
         .table-wrapper(drag-scroll="")
            table.table--selectable
               thead
                  tr
                     th(ng-repeat="heading in detailHeadings", ng-class="{ 'large': heading.size == 'lg' }") {{heading.name}}
               tbody
                  tr(ng-repeat="spkItem in spkItemList | filter:search" ng-click="selectSpkItemToBeCut(spkItem)")
                     td {{spkItem.serial}}
                     td {{spkItem.name}}
                     td {{spkItem.category}}
                     td {{spkItem.weight}}
                     td {{spkItem.note}}
                     td {{spkItem.quantity}}
                     
