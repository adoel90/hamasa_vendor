form.form
  .form-group
    label.form-label Cari Berdasarkan
    .row
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.pd-right-15
        ui-select(ng-model="firstSelectedFilter.item", style="margin-right: 15px")
          ui-select-match
            span(ng-bind="$select.selected.name")
          ui-select-choices(repeat="filter in (firstSearchFilters | filter: $select.search) track by $index")
            span(ng-bind="filter.name")
      
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.pd-right-15
        datepicker(date-format="yyyy-MM-dd" date-set="{{billing.requiredData.date}}")
          input.form-input(type="text", ng-model="billing.requiredData.date", placeholder="{{firstSelectedFilter.item.placeholder}}")
      .col-lg-1.col-md-1.col-sm-1
        button.button.button--base.button--secondary(ng-click="doSearchFilter()") Cari
    .row.m-top-15
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.pd-right-15
        ui-select(ng-model="secondSelectedFilter.item", style="margin-right: 15px")
          ui-select-match
            span(ng-bind="$select.selected.name")
          ui-select-choices(repeat="filter in (secondSearchFilters | filter: $select.search) track by $index")
            span(ng-bind="filter.name")
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.pd-right-15
        customer-region(data="billing.requiredData")
        
      
      
