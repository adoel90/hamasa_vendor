form.form(ng-submit="saveGrade()")
  .row
    .col-lg-6.col-md-6.col-sm-6.col-xs-12.pd-right-15
      .form-group
        label.form-label Kode Grade
        input.form-input(type="text", placeholder="Masukkan kode grade", ng-model="grade.id", ng-readonly="purpose == 'Edit Grade'" required)
          
    .col-lg-6.col-md-6.col-sm-6.col-xs-12.pd-left-15
      .form-group
        label.form-label Grade
        input.form-input(type="text", placeholder="Masukkan Grade", ng-model="grade.name", required)
          
  .flex-row.flex-justify-between
    button.button.button--base.button--danger(type="button" ng-click="goBack()")
      i.fa.fa-chevron-left.icon.icon--small
      | Kembali
    button.button.button--base.button--primary
      i.fa.fa-floppy-o.icon.icon--regular
      | Simpan
        
