form.form
  .form-group
    label.form-label(ng-show="searchFilters") Cari Berdasarkan
    .row
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.pd-right-15(ng-show="searchFilters")
        ui-select(ng-model="selectedFilter.item", style="margin-right: 15px")
          ui-select-match
            span(ng-bind="$select.selected.name")
          ui-select-choices(repeat="filter in (searchFilters | filter: $select.search) track by $index")
            span(ng-bind="filter.name")
      
      .col-lg-4.col-md-4.col-sm-4.col-xs-12.flex-row(ng-show="searchFilters")
        input.form-input.bigLetter(type="text", ng-model="searchVal", placeholder="{{selectedFilter.item.placeholder}}" ng-hide="selectedFilter.item.by == 'date'", autofocus="true")
        datepicker(date-format="yyyy-MM-dd", selector="form-input" ng-show="selectedFilter.item.by == 'date'")
          .input-group(ng-click="showCalendar()")
            input.form-input(type="text", ng-model="searchVal", placeholder="{{selectedFilter.item.placeholder}}")
      .col-lg-1.col-md-1.col-sm-1.col-xs-12(ng-show="searchFilters")
        button.button.button--base.button--secondary(ng-click="doSearchFilter(searchVal, selectedFilter.item.by)") Cari
      
      .col-lg-3.col-md-3.col-sm-3.col-xs-12(ng-show="btnName")
        a.button.button--primary.button--base(ng-click="redirectToCreateNewData()")
          i.fa.fa-plus.icon.icon--regular
          | {{ btnName }}
