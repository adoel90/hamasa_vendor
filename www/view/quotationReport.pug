include ./global/head.pug
include ./parts/sidenav.pug
main.main
  include ./parts/main-header.pug
  include ./parts/main-subheader.pug
  
  .main_content(ng-cloak)
    .page_header
      h2 Laporan Quotation Harian
    .page_content
      .page_block
        form.form
          .form-group
            .flex-justify-between
              label.form-label Cari Berdasarkan
              button.button.button--primary.button--base(ng-show="listReportData.length > 0" ng-click="printReport()") PRINT
            .row.m-top-15
              .col-lg-2.col-md-2.col-sm-2.col-xs-12
                label.form-label.m-right-15 Tanggal
              .col-lg-5.col-md-5.col-sm-5.col-xs-12
                datepicker(date-format="yyyy-MM-dd" date-set="{{requiredData.date}}")
                  input.form-input(type="text", ng-model="requiredData.date", placeholder="Masukkan tanggal akhir")
              .col-lg-3.col-md-3.col-sm-3.col-xs-12.pd-left-15    
                button.button.button--secondary.button--base(ng-click="doSearchFilter()") Cari                
      .page_block(ng-show="listReportData.length == 0" style="text-align: center")
        label There is no data
      table-content(table-header="headings" table-body="listReportData" table-column="cols" type="'table-with-price'" ng-show="listReportData.length > 0")
      
      .page-block(style="text-align: center" ng-show="listReportData.length > 0")
        pagination(total-rows="totalRows", data="requiredData")
      
